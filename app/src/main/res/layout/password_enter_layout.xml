<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/img_background_password"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title_password"
            android:text="Set a Password"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:hint="Enter digits here"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/textViewPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
android:textColor="@color/black"
            android:layout_marginEnd="16dp"
            android:hint="Enter digits here" />

        <GridLayout
            android:id="@+id/numericPad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:columnCount="3"
            android:rowCount="4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewPassword">

            <!-- Boutons de la palette numÃ©rique -->
            <Button
                android:id="@+id/Button1"
                style="@style/NumericButtonStyle"
                android:text="1" />

            <Button
                android:id="@+id/Button2"
                style="@style/NumericButtonStyle"
                android:text="2" />

            <Button
                android:id="@+id/Button3"
                style="@style/NumericButtonStyle"
                android:text="3" />

            <Button
                android:id="@+id/Button4"
                style="@style/NumericButtonStyle"
                android:text="4" />

            <Button
                android:id="@+id/Button5"
                style="@style/NumericButtonStyle"
                android:text="5" />

            <Button
                android:id="@+id/Button6"
                style="@style/NumericButtonStyle"
                android:text="6" />

            <Button
                android:id="@+id/Button7"
                style="@style/NumericButtonStyle"
                android:text="7" />

            <Button
                android:id="@+id/Button8"
                style="@style/NumericButtonStyle"
                android:text="8" />

            <Button
                android:id="@+id/Button9"
                style="@style/NumericButtonStyle"
                android:text="9" />

            <Button
                android:id="@+id/delete_all_number_password"
                style="@style/NumericButtonStyle"
                android:text="AC"/>

            <Button
                android:id="@+id/Button0"
                style="@style/NumericButtonStyle"
                android:text="0" />
            <Button
                android:id="@+id/delete_number_password"
                style="@style/NumericButtonStyle"
                />

            <!-- Ajoutez les autres boutons ici -->
        </GridLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <Button
                android:id="@+id/cancel_btn_password"
                android:text="Cancel"
                style="@style/TextViewOkCancelStyle"/>
            <Button
                android:text="Ok"
                android:id="@+id/ok_btn_password"
               style="@style/TextViewOkCancelStyle"/>


        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
