<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- global -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/hist_tab_line_radius" />
            <stroke
                android:width="@dimen/hist_tab_line_width"
                android:color="@color/color_line" />
            <size
                android:width="@dimen/hist_tab_total_width"
                android:height="@dimen/hist_tab_total_height" />
        </shape>
    </item>
    <!-- Line horizontal -->
    <item
        android:bottom="@dimen/hist_tab_line_horizontal_height_top">

        <shape android:shape="line">
            <stroke
                android:width="@dimen/hist_tab_line_width"
                android:color="@color/color_line" />

        </shape>
    </item>

    <!-- Line 1 -->
    <item
        android:left="@dimen/hist_tab_left_line1"
        android:right="@dimen/hist_tab_left_line1">

        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/hist_tab_line_width"
                android:color="@color/color_line" />

        </shape>
    </item>

    <!-- Line 2 -->
    <item
        android:left="@dimen/hist_tab_left_line2"
        android:right="@dimen/hist_tab_left_line2">

        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/hist_tab_line_width"
                android:color="@color/color_line" />

        </shape>
    </item>

    <!-- Line 3 -->
    <item
        android:left="@dimen/hist_tab_left_line3"
        android:right="@dimen/hist_tab_left_line3">

        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/hist_tab_line_width"
                android:color="@color/color_line" />

        </shape>
    </item>


</layer-list>

